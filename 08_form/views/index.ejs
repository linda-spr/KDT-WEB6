  <!-- #2 form validation -->
  <h2>GET 요청</h2>
  <form action="/getForm" name="login1" method="get" class="get-form">
    <input type="text" name="id" placeholder="ID는 최소 3글자" minlength="3" required>
    <input type="password" name="pw" placeholder="PW는 최소 4글자, 최대 8글자" minlength="4" maxlength="8" required>
    <input type="email" name="email" placeholder="EMAIL" required>
    <input type="number" name="grade" placeholder="GRADE" min="1" required>
    <button type="submit">제출 </button>
  </form>

  <h2>POST 요청</h2>
  <form action="/postForm" name="login2" method="post" class="post-form">
    <!-- id: 대소문자, 한글, 숫자 / 4글자 이상 -->
    <!-- pw: 소문자, 숫자 / 8자리 이상 12자리 이하 -->
    <!-- ex. [a-z]: a부터 z까지, [0-9]: 0부터 9까지 -->
    <input type="text" name="id" placeholder="ID" 
      pattern="([a-zA-Z0-9가-힣]){4,}" 
      title="대소문자, 한글, 숫자를 포함하여 4글자 이상 작성해주세요" required>
    <input type="password" name="pw" placeholder="PW" 
      pattern="([a-z0-9]){8,12}" 
      title="소문자, 숫자로 8글자 이상 12글자 이하로 작성해주세요" required>
    <button type="submit">제출 </button>
  </form>

